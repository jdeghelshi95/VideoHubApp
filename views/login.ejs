<form action="/login" method="post">
  <div class="container">
    <div class="row d-flex justify-content-center">
      <div class="col-md-8">
        <div class="form-outline card p-3 px-5 py-5 mt-3 align-items-center">
          <span class="car">Video Hub</span>
          <span class="signin mt-3">Sign In with Email</span>

          <div class="form-outline mb-4">
            <input type="email" id="InputLabelEmail" name="email" class=" mt-3 form-control"
              placeholder="Enter Your Email">
            <!-- <label class ="form-label" for="InputLabelEmail">Email Address</label> -->
          </div>

          <div>
            <input type="password" name="password" class="mt-3 form-control" placeholder="Enter Your Password" />
          </div>

          <button type="submit" class="btn btn2 btn-light mt-3">SIGN IN</button>
          <p class="text-danger error">
            <% if (messages.error) { %>
              <%= messages.error %>
                <% } %>
          </p>
          <!-- <span class="forgot mt-4">Forgot password</span> -->
          <span class="account mt-4">Don't Have an account?</span>

          <!-- <div class="form-control mb-4 mt-2 text-center"> -->
          <a class="signup" href="/register">
            <button class="btn btn-secondary btn-lg" type="button" role="button">Signup</button>
          </a>

        </div>
      </div>

    </div>
  </div>
</form>